{
  "name": "quikapi/framework",
  "description": "QuikAPI - a lightweight, fast PHP microframework for building APIs quickly.",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/QuikAPI/framework",
  "keywords": ["framework", "api", "microframework", "php", "router", "middleware"],
  "authors": [
    { "name": "Bhaskar Rajoriya", "email": "brnrajoriya@gmail.com" }
  ],
  "require": {
    "php": ">=8.1",
    "vlucas/phpdotenv": "^5.6",
    "symfony/console": "^6.4",
    "illuminate/database": "^10.0",
    "illuminate/events": "^10.0",
    "illuminate/validation": "^10.0",
    "illuminate/translation": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "QuikAPI\\": "./"
    }
  },
  "bin": [
    "bin/quikapi"
  ],
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "vimeo/psalm": "^5.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "cs-fix": "php-cs-fixer fix",
    "psalm": "psalm --output-format=compact"
  },
  "support": {
    "issues": "https://github.com/QuikAPI/framework/issues",
    "source": "https://github.com/QuikAPI/framework"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.x-dev"
    }
  }
}
